# Hyperswitch Environment Configuration Template
# Copy this to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://hyperswitch_user:hyperswitch_password@localhost:5433/hyperswitch

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6380

# Security Keys (CHANGE THESE IN PRODUCTION!)
MASTER_KEY=master_key_placeholder_change_in_production
CONTROL_CENTER_SECRET=control_center_secret_change_in_production

# Server Configuration
BIND_ADDRESS=0.0.0.0:8080
RUST_LOG=info
ENABLE_ADMIN=true

# Admin Dashboard Credentials (CHANGE IN PRODUCTION)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Payment Gateway Configuration Examples
# Uncomment and add your actual credentials

# Stripe
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...

# Razorpay
# RAZORPAY_KEY_ID=rzp_test_...
# RAZORPAY_KEY_SECRET=...

# PayPal
# PAYPAL_CLIENT_ID=...
# PAYPAL_CLIENT_SECRET=...
# PAYPAL_MODE=sandbox

# Adyen
# ADYEN_API_KEY=...
# ADYEN_CLIENT_KEY=...
# ADYEN_ENVIRONMENT=test

# Additional Configuration
# Webhook URL for payment notifications
# WEBHOOK_URL=https://your-domain.com/webhooks/hyperswitch

# Rate Limiting
# RATE_LIMIT_PER_MINUTE=100

# CORS Configuration
# CORS_ORIGINS=http://localhost:3000,https://your-frontend.com

# Monitoring & Analytics
# SENTRY_DSN=...
# DATADOG_API_KEY=...

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
